{{ "component-image-with-text.css" | asset_url | stylesheet_tag }}

<div class="image-with-text page-width">
  <div
    class="image-with-text__grid grid grid--gapless grid--1-col grid--2-col-tablet"
  >
    <div class="grid__item">
      <div class="image-with-text__medid">
        {% if section.settings.image !=blank %} <img src ="
        {{ section.settings.image | img_url: "500x" }} "> {% else %}
        {{ "image" | placeholder_svg_tag: "placeholder-svg" }}
        {% endif %}
      </div>
    </div>

    <div class="grid-item">
      <div class="image-with-text__content">
        <h2 class="image-with-text__heading h1">
          {{ section.settings.heading }}
        </h2>
        <div class="image-with-text__text rte">{{ section.settings.text }}</div>
        <a class="button" href=" {{ section.settings.button_link }} ">
          {{ section.settings.button_label }}
        </a>
      </div>
    </div>
  </div>
</div>
